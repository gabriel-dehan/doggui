
<%= simple_form_for (@dog), html: { multipart: true } do |f| %>


  <div class= "row">

    <div class="hidden-xs col-sm-3">
      <div class= "row">
         <div class="col-sm-12">
           <div class="bloc-new-form illu-form-for-picture">
              <h4> <i class="fas fa-camera-retro"></i> Réussir sa photo</h4>
              <h6><i class="fas fa-chevron-right"></i> Choisir un fond neutre</h6>
              <h6> <i class="fas fa-chevron-right"></i> Préférer Une lumière extérireure naturelle</h6>
              <h6> <i class="fas fa-chevron-right"></i> Eviter les compositions coupées</h6>
              <h6> <i class="fas fa-chevron-right"></i> Attention aux floues et aux photos en mouvements </h6>
           </div>
         </div>
      </div>
    </div>

   <div class="col-xs-12 col-sm-6">
     <div class= "row">
       <div class= "bloc-new-form ">

          <div class="col-sm-12"><%= f.input :picture, placeholder: 'Photo', label: 'Photo princpale'%> </div>
          <div class="col-sm-12"><%= f.input :picture_cache, as: :hidden %></div>
          <div class="col-sm-12">
            <%= f.input :images, as: :file, input_html: { multiple: true, class: 'multiple-file-limit-3' }, name: 'images[]', label:'Photo supplémentaire' %>
            <% @dog.images.each do |image| %>
              <div class="multiple-images-form">
                <%= label_tag 'Supprimer' %>
                <%= check_box_tag image.id, 'delete' %>
                <%= cl_image_tag(image.image, style: 'width: 150px') %>
              </div>
             <% end %>
          </div>

       <div class= "row">
          <div class="col-xs-12 col-sm-12"> <%= f.input :video, placeholder: 'Lien video', label: false %></div>
       </div>
      </div>
     </div>

    </div>

  </div>

    <div class= "row">

        <div class="hidden-xs col-sm-3">
          <div class= "row">
            <div class="col-sm-12">
              <div class="bloc-new-form illu-form-for-detail">
             <h4><i class="fas fa-asterisk"></i> Les informations pour un bon référencement</h4>
              <h6><i class="fas fa-chevron-right"></i> Utiliser la liste dans le menu déroulant</h6>
              <h6> <i class="fas fa-chevron-right"></i> Renseigner les informations physique clés (nous sommes sûrs que vous les connaissez par coeur)</h6>
              <h6> <i class="fas fa-chevron-right"></i> Vous êtes déjà à la motié du formulaire ! </h6>
           </div>
         </div>
          </div>
        </div>
       <div class="col-xs-12 col-sm-6">
         <div class= "row">
            <div class= "bloc-new-form">

              <div class="row">
                <div class="col-xs-12 col-sm-6"> <%= f.input :nickname, label:"Prénom de l'annimal" %></div>
              <div class="col-xs-12 col-sm-6"><%= f.input :lof_number, label:"Son numéro LOF" %></div>
              </div>
              <div class="row">
                <div class="col-xs-12 col-sm-6">  <%= f.input :birthday_date, label:"Date de naissance" %> </div>
              </div>

              <div class="row">
                <div class="col-xs-12 col-sm-6"> <%= f.input :breed, label: "Pédigrée" %></div>
                 <div class="col-xs-12 col-sm-6"><%= f.input :weight, label:"Poids" %></div>
              </div>

              <div class= "row">
                <div class="col-xs-12 col-sm-6"><%= f.input :color, label:"Robe" %></div>
                <div class="col-xs-12 col-sm-6"> <%= f.input :eye_color, label:"Couleur des yeux" %></div>
              </div>

            </div>
          </div>
        </div>
      </div>

      <div class= "row">

        <div class="hidden-xs col-sm-3">
          <div class= "row">
            <div class="col-sm-12">
              <div class="bloc-new-form illu-form-for-description">
                <h4><i class="fas fa-list-ul"></i> Les détails pour devancer les questions</h4>
                <h6><i class="fas fa-chevron-right"></i> Essayer d'être précis</h6>
                <h6> <i class="fas fa-chevron-right"></i> Une annonce bien remplie donne confiance</h6>
                <h6> <i class="fas fa-chevron-right"></i> Les plus qui metteront en valeur votre doggui</h6>
             </div>
           </div>
          </div>
        </div>
       <div class="col-xs-12 col-sm-6">
         <div class= "row">
            <div class= "bloc-new-form ">

              <div class="row">
               <div class="col-xs-12 col-sm-12"><%= f.input :description, placeholder: 'Analyses médicales réalisées, prix beauté reçu ...', label: " Description", :input_html => {:rows => 10}%></div>
              </div>

              <div class="row">
                 <div class="col-xs-12 col-sm-12"> <%= f.input :address, label:"Adresse de sa niche" %> </div>
              </div>

              <div class="row">
                <div class="col-sm-6"> <%= f.input :price, label:"Rétribution", placeholder: "€" %></div>
              </div>
            </div>
          </div>
        </div>
        </div>
         <div class= "row">
        <div class="col-xs-12 col-sm-3"></div>
        <div class="col-xs-12 col-sm-6">
        <%= f.submit label:"Ajouter mon Doggui",class: "btn-form"%>
         </div>
           </div>
      </div>


<% end %>

