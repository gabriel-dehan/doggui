<div class="banner2" style="background-image: url('<%= asset_path'Chien.landing.jpg'%>');">
  <div class="banner-content">
    <h2>  <%= "'#{@dog.nickname}'" %> le <%= link_to dog.breed&.name, index_search_path(query: dog.breed&.name) %> </h2>
  </div>
</div>


<div class="row container-show">

  <div class="col-xs-12 col-sm-8">

     <% if @dog.images.any? %>
      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <%= cl_image_tag @dog.picture, class: "image-show-1" %>
        </div>

        <div class="col-xs-12 col-sm-6">
          <div class="first-image">
            <%= cl_image_tag @dog.images.first.image, class: "image-show-2", crop: :fill, width: 495, height: (@dog.images.count > 1) ? 179 : 360 %>
          </div>
          <% if @dog.images.count > 1 %>
            <div class="other-images">
              <% @dog.images[1..-1].each do |img| %>
                <%= cl_image_tag img.image, height: 179, width: (495 / @dog.images[1..-1].count), crop: :fill, style: "width: #{100 / @dog.images[1..-1].count}%;" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-xs-12 col-sm-12 dog-show-image-container">
          <%= cl_image_tag @dog.picture, class: "image-show-0", width: 1000, height: 380, crop: :fill %>
        </div>
      </div>
    <% end %>

      <div class="row">

         <div class="col-xs-12 col-sm-3">

            <div class="row">

                 <div class="col-xs-6 col-sm-12">
                    <div class="carte-caracteristique">
                      <div class="carte-caracteristique-texte"><%= @dog.status %></div>
                      <div class="carte-caracteristique-texte-2"><%= @dog.lof_number%></div>
                    </div>
                 </div>

                 <div class="col-xs-6 col-sm-12">
                  <div class="carte-caracteristique">
                    <div class="carte-caracteristique-texte"><%= @dog.age%></div>
                    <div class="carte-caracteristique-texte-2"><%= " N√© le #{@dog.birthday_date}"%></div>
                  </div>
                 </div>

                 <div class="col-xs-6 col-sm-12">
                    <div class='carte-caracteristique'>
                      <div class="carte-caracteristique-texte"><%= @dog.color%></div>
                      <div class="carte-caracteristique-texte-2">Couleur de la robe</div>
                    </div>
                 </div>


               <div class="col-xs-6 col-sm-12">
                    <div class='carte-caracteristique'>
                      <div class="carte-caracteristique-texte"><%= "#{@dog.weight} kg"%></div>
                      <div class="carte-caracteristique-texte-2">Poids</div>
                    </div>
                  </div>

                <div class="col-xs-6 col-sm-12">
                  <div class="carte-caracteristique">
                    <div class="carte-caracteristique-texte retribution"> <%= @dog.price%> ‚Ç¨  </div>
                    <div class="carte-caracteristique-texte-2 "> R√©tribution</div>
                  </div>
               </div>

               <div class="col-xs-6 col-sm-12">
                  <div class="carte-caracteristique">
                    <div class="carte-caracteristique-texte"> üìç<%= dog.get_city&.capitalize %> </div>
                    <div class="carte-caracteristique-texte-2 "> Ville </div>
                  </div>
               </div>
           </div>
           </div>

            <div class="col-xs-12 col-sm-9">
              <div class="info-description">
              <div class="show-titre-description">üêï Description</div>
              <%= @dog.description %>
            </div>

            </div>
      </div>

      <div class="row">
             <div class="hidden-xs col-sm-12">
               <div
                id="map"
                style="width: 103.5%;
                min-height: 45vh;
                border-radius: 5px;"
                data-zoom-out="true"
                data-markers="<%= [{lat:@dog.latitude, lng:@dog.longitude}].to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
              </div>
         </div>
      </div>


  </div>

   <div class="col-xs-12 col-sm-4">

          <div class="card-show-user">

             <% if @dog.user.avatar_url %>
                <%= link_to showprofile_path(dog.user) do %>
                 <img src="<%= cl_image_path @dog.user.avatar, width: 70, height: 70, crop: :fill, gravity: :face %>" class="avatar-navbar">
                <% end %>
              <% else %>
                <%= link_to image_tag("avatar.png", alt:"logo", class:"avatar-show"), showprofile_path(dog.user) %>
            <% end %>

           <div class="show-titre-description"><%= @dog.user.first_name %> <%= @dog.user.last_name %> (L'heureux propri√©taire) </div>
           <div>Inscrit depuis : <%= l(@dog.user.created_at, format: :date_month_year_concise) %></div>
           <div>Derni√®re visite : <%= l(@dog.user.last_sign_in_at || @dog.user.created_at, format: :date_month_year_concise) %></div>
           <div>profil v√©rifi√© <i class="fas fa-user-check"></i></div>
         </div>

       <div class="bouton-show-like">
          <% if user_signed_in? %>
        <%= link_to dog_like_path(dog), method: :put, remote: true, class: 'downvote-upvote' do %>
          <div class="show-like">
            <% if current_user.voted_for? dog %>
              <i class="fas fa-heart fa-2x"></i>
            <% else %>
              <i class="far fa-heart fa-2x"></i>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="show-like">
          <% if dog.get_upvotes.size > 0 %>
            <i class="fas fa-heart fa-2x"></i>
          <% else %>
            <i class="far fa-heart fa-2x"></i>
          <% end %>
        </div>
      <% end %>

       </div>

    <div id="conversation">

        <% if user_signed_in? %>
        <chat
          :get_url="<%= find_messages_index_path %>"
          :post_url="<%= find_dog_post_conversation_path %>"
          :conversations_url="<%= dog_conversations_path(@dog, format: :json).to_json %>"
          :dog_to_user="<%= policy(@dog).to_user? %>"
          :dog="<%= @dog.id %>"
          :user_id="<%= current_user.id %>"
        ></chat>
        <% end %>
    </div>

     </div>

    </div>

  </div>

</div>
