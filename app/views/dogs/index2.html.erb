<div class="banner2" style="background-image: url('<%= asset_path'Chien.landing.jpg'%>');">

  <div class="banner-content">
    <h1> <i class="fas fa-medal"></i> Trouver son molosse </h1>
     <div class="call-to-action-index-2">
      <div class= "search-index-2">
      <%= form_tag index_search_path, method: :get do %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control form-search",
          placeholder: "Doggui déjà inscris ... ex: labrador" %>
       </div>
         <button class="bouton-search-2">Rechercher <i class="fas fa-search"></i></button>
         <% end %>
       </div>
  </div>


</div>

<div class="container-flex">

    <div class="container-card">
       <div class="row">
           <% @dogs.includes(:user, :breed).each do |dog| %>
              <div class="col-xs-12 col-sm-12 col-md-5">
                <%= render partial: 'dogs/card', locals: { dog: dog } %>
              </div>
          <% end %>
       </div>
    </div>

    <div class="map-container">
        <div
          id="map"
          style="
          width: 100%;
          height: 100%;
          "
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
       </div>
    </div>

</div>


  <div> <%= paginate @dogs %></div>
