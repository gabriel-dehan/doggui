<div class="banner2" style="background-image: url('<%= asset_path'Chien.landing.jpg'%>');">
  <div class="banner-content">
    <h1> Mes param√®tres </h1>
  </div>
</div>

<div class="container">

  <div class="form-edit">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>


    <div class="form-edit-avatar">

     <div class="row bg-grey">
       <div class="col-sm-4">
        <h5> Photo</h5>
        <% if @current_user.avatar_url %>
        <%= cl_image_tag current_user.avatar_url, class: "edit-avatar" %>
        <% else %>
        <%= image_tag "avatar.png", class: "edit-avatar" %>
        <% end %>
       </div>
       <div class="col-sm-4">
        <%= f.input :avatar, required: false, autofocus: true, label: false%>
        <%= f.input :avatar_cache, as: :hidden %>
      </div>
     </div>


    <div class="row bg-grey">
      <div class="col-sm-5"> <%= f.input :first_name, required: false, autofocus: true %></div>
      <div class="col-sm-5"> <%= f.input :last_name, required: false, autofocus: true %> </div>
    </div>

    <div class="row bg-grey">
      <div class="col-sm-5"> <%= f.input :email, required: true, autofocus: true %> </div>
      <div class="col-sm-5  "><%= f.input :telephone, required: false, autofocus: true%></div>
   </div>

   <div class="row bg-grey">
      <div class="col-sm-4"> <%= f.input :siret, required: false, autofocus: true %>  </div>
   </div>

   <div class="row bg-grey">
     <div class="col-sm-6"><%= f.input :introduction, required: false, autofocus: true%></div>
    </div>

  <div class="form-actions"><%= f.button :submit, "modifier", class: "btn-form-new btn btn-warning "  %> </div>
  </div>
  <% end %>

  <h5>Supprimer mon compte :</h5>

  <p>Vous souhaitez nous quitter ? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>

  </div>
</div>

