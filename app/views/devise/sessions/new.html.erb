<div class="banner2" style="background-image: url('<%= asset_path'Chien.landing.jpg'%>');">
  <div class="banner-content">
    <h1> <i class="far fa-id-badge"></i> Se connecter (déjà inscrit)</h1>
  </div>
</div>

<div class="container">

  <div class="row">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

         <div class="col-xs-12 col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
          <div class="form-new-user">
            <%= f.input :email,  required: false, autofocus: true, label:"Adresse e-mail" %>
            <%= f.input :password, label: "Mot de passe", required: false %>
            <%= f.input :remember_me, label:"Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :button, "Se connecter", type: :submit, class: :'btn-seconnecter' %>

             <%= render "devise/shared/links" %>
            </div>
        <% end %>


       </div>
    </div>


  <br>
  <br>
  <br>
  <br>
  <br>
</div>
